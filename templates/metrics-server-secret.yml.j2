---
apiVersion: v1
kind: Secret
metadata:
  name: metrics-server-certs
  namespace: kube-system
type: Opaque
data:
  metrics-server.key: |
{{ lookup('file', kube_metrics_server_keyfile) | indent(4, indentfirst=True) }}
  metrics-server.cert: |
{{ lookup('file', kube_metrics_server_certfile) | indent(4, indentfirst=True) }}
  kubelet-ca.cert: |
{{ lookup('file', kube_metrics_server_kubelet_cafile) | indent(4, indentfirst=True) }}
  requestheader-ca.cert: |
{{ lookup('file', kube_metrics_server_requestheader_client_ca) | indent(4, indentfirst=True) }}
